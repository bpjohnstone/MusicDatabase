@model MusicDatabase.ViewModel.PersonDetails

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>PersonDetails</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Psuedonym)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Psuedonym)
        </dd>

    </dl>


    @if (Model.EventsAttended.Count > 0)
    {
        <h4>Events</h4>

        <table>

            @foreach (var eventListing in Model.EventsAttended.OrderByDescending(e => e.EventDate))
            {

                <tr>
                    <td style="padding-right: 20px;">
                        @eventListing.EventDate.ToString("d MMMM yyyy")
                    </td>
                    <td style="padding-right: 20px;">

                        @if (!string.IsNullOrWhiteSpace(eventListing.EventName))
                        {
                            <text>@eventListing.EventName - </text>
                        }

                        @{
                            var count = eventListing.Headliners.Count();
                            var current = 1;

                            foreach (var headliner in eventListing.Headliners.OrderBy(p => p.Position))
                            {
                                if ((count > 1) && (current > 1))
                                {
                                    if (current != count)
                                    {
                                        <text>, </text>
                                    }
                                    else
                                    {
                                        <text> and </text>
                                    }
                                }


                                var performerCount = headliner.Performers.Count();
                                var performerIndex = 1;

                                foreach (var performer in headliner.Performers.OrderBy(p => p.Position))
                                {
                                    if ((performerCount > 1) && (performerIndex > 1))
                                    {
                                        if (performerIndex == 2)
                                        {
                                            <text> performing with </text>
                                        }
                                        else if (performerIndex < performerCount)
                                        {
                                            @Html.Raw(", ");
                                        }
                                        else
                                        {
                                            <text> and </text>
                                        }
                                    }

                                    @Html.ActionLink(performer.MusicalEntityName, "Details", "MusicalEntities", new { ID = performer.MusicalEntityID }, null)

                                    performerIndex++;
                                }

                                if (!string.IsNullOrWhiteSpace(headliner.PerformingAs))
                                {
                                    <text> (performing as <i>@headliner.PerformingAs</i>)</text>
                                }

                                current++;
                            }

                            if (count > 1)
                            {
                                <text> co-headlining</text>
                            }
                        }

                        @if (!string.IsNullOrWhiteSpace(eventListing.EventGroupName))
                        {
                            <text>(@eventListing.EventGroupName</text>

                            if(eventListing is MusicDatabase.ViewModel.ConcertListing)
                            {
                                <text> show)</text>
                            }
                            else if (eventListing is MusicDatabase.ViewModel.FestivalListing)
                            {
                                <text> festival)</text>
                                <span style="color: red; font-size: 10px; font-weight: bold;">[Festival]</span>
                            }
                            else if (eventListing is MusicDatabase.ViewModel.MultiDayFestivalListing)
                            {
                                <text> festival)</text>
                                <span style="color: maroon; font-size: 10px; font-weight: bold;">[Multi-Day Festival]</span>
                            }
                        }

                    </td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(eventListing.VenueName))
                        {
                            @Html.ActionLink(eventListing.VenueName, "Details", "Locations", new { ID = eventListing.VenueID }, null)

                            if (!string.IsNullOrWhiteSpace(eventListing.VenueCity))
                            {
                                @Html.Raw(", ")
                                @eventListing.VenueCity
                            }
                        }
                    </td>
                </tr>
                            }
        </table>

                            }


</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
