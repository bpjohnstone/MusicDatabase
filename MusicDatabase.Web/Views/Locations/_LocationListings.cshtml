@model MusicDatabase.ViewModel.LocationListingCollection

@if (Model.Locations.Count() > 0)
{
    <p><b>Count: </b>@Model.Locations.Count()</p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Locations.First().FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations.First().City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations.First().State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations.First().Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations.First().MusicalEvents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations.First().Purchases)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations.First().IsClosed)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Locations.OrderBy(l => l.FullName))
        {
            <tr>
                <td>
                    @Html.ActionLink(item.FullName, "Details", new { ID = item.ID })
                </td>
                <td>
                    @Html.ActionLink(item.City, "City", new { ID = item.City })
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.State))
                    {
                        @Html.ActionLink(item.State, "State", new { ID = item.State })
                    }
                </td>
                <td>
                    @Html.ActionLink(item.Country, "Country", new { ID = item.Country })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MusicalEvents)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Purchases)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsClosed)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                </td>
            </tr>
        }
        
        <tr>
            <td colspan="4" style="font-weight: bold; text-align: right;">
                Total
            </td>
            <td style="font-weight: bold;">
                @Model.TotalMusicalEvents
            </td>
            <td style="font-weight: bold;">
                @Model.TotalPurchases
            </td>
            <td>

            </td>
        </tr>
    </table>
}
else
{
    <i>No results found</i>
}