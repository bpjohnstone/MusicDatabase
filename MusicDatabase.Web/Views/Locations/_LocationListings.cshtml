@model IEnumerable<MusicDatabase.ViewModel.LocationListing>

@if (Model.Count() > 0)
{
    <p><b>Count: </b>@Model.Count()</p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().MusicalEvents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Purchases)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().IsClosed)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.OrderBy(l => l.FullName))
        {
            <tr>
                <td>
                    @Html.ActionLink(item.FullName, "Details", new { ID = item.ID })
                </td>
                <td>
                    @Html.ActionLink(item.City, "City", new { ID = item.City })
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.State))
                    {
                        @Html.ActionLink(item.State, "State", new { ID = item.State })
                    }
                </td>
                <td>
                    @Html.ActionLink(item.Country, "Country", new { ID = item.Country })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MusicalEvents)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Purchases)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsClosed)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
}